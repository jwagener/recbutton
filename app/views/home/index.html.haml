%html
  %head
    %title RecButton
    %meta{:name => "description", :content => 'record audio in your browser and share instantly'}
    %link{:rel => "image_src", :href => '/images/recbutton-159x159.png'}
    
    - ['jquery', 'connect', 'swfobject', 'recorder', 'home_controller'].each do |js|
      = javascript_include_tag js

    %script{:type => 'text/javascript'}= ga_tracking_code

    = stylesheet_link_tag 'base'

  %body
    .head
      %h1.opacity-zero RecButton

    .actions
      #time.hidden 0.00
      %a#play.hidden{:href => '#play'} Play
      %a#record{:href => '#record'} Record
      %a#record-stop.hidden{:href => '#record-stop'} Stop recording
      %a#share.hidden{:href => '#share'} Share
      %div#record-instruction.opacity-zero Click to record
      %div#play-instruction.hidden Play
      %div#share-instruction.hidden Share
      = render :partial => 'home/flash_object', :object => {:id => 'recorder', :height => 140, :width => 230, :src => '/swf/Recorder.swf', :wmode => 'transparent', :allowscriptaccess => 'always'}
      
    .share-actions.hidden
      %input#permalink-url{:value => ""}
      .more-share-actions.hidden
        %a#share-fb{:href => '#facebook'} Facebook
        %a#share-twitter{:href => '#twitter'} Twitter
        %div#share-more-instruction Share more
        %div#your-track-instruction Your track
